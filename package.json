{
  "name": "remark-bookmarks",
  "version": "0.0.0",
  "description": "A link manager for Markdown files.",
  "main": "dist/index.js",
  "files": [
    "dist",
    "LICENSE-MIT"
  ],
  "scripts": {
    "prepublish": "cross-env BABEL_ENV=publish babel src --out-dir dist --ignore *.test.js",
    "precommit": "lint-staged",
    "report": "nyc report --reporter=html",
    "test": "xo && nyc ava"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --tab-width=4 --single-quote --no-bracket-spacing --trailing-comma=es5",
      "git add"
    ],
    "*.md": [
      "remark *.md -o --quiet",
      "all-contributors generate",
      "git add"
    ]
  },
  "keywords": [
    "global",
    "links",
    "markdown",
    "remark"
  ],
  "author": {
    "name": "Ben Briggs",
    "email": "beneb.info@gmail.com",
    "url": "http://beneb.info"
  },
  "license": "MIT",
  "engines": {
    "node": ">=4"
  },
  "devDependencies": {
    "all-contributors-cli": "^4.3.0",
    "ava": "^0.19.1",
    "babel-cli": "^6.0.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-env": "^1.4.0",
    "babel-register": "^6.24.1",
    "cross-env": "^4.0.0",
    "husky": "^0.13.3",
    "lint-staged": "^3.4.0",
    "nyc": "^10.2.0",
    "prettier": "^1.2.2",
    "remark": "^7.0.0",
    "remark-cli": "^3.0.0",
    "remark-heading-gap": "^3.0.0",
    "remark-inline-links": "^3.0.3",
    "remark-license": "^4.0.0",
    "remark-reference-links": "^3.0.4",
    "remark-toc": "^4.0.0",
    "remark-usage": "^5.0.0",
    "xo": "^0.18.1"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": 4
          }
        }
      ]
    ],
    "plugins": [
      "add-module-exports"
    ]
  },
  "xo": {
    "space": 4,
    "rules": {
      "comma-dangle": [
        0
      ]
    }
  },
  "ava": {
    "require": "babel-register"
  },
  "dependencies": {
    "unist-builder": "^1.0.2",
    "unist-util-remove": "^0.2.1",
    "unist-util-visit": "^1.1.1"
  },
  "remarkConfig": {
    "plugins": {
      "./dist/index.js": {
        "bookmarks": {
          "npm": "https://npmjs.com/package/remark-bookmarks",
          "remark": "https://github.com/wooorm/remark",
          "remarkInlineLinks": "https://github.com/wooorm/remark-inline-links",
          "remarkLicense": "https://github.com/wooorm/remark-license",
          "remarkReferenceLinks": "https://github.com/wooorm/remark-reference-links"
        }
      },
      "remark-toc": {
        "maxDepth": 3
      },
      "remark-usage": {},
      "remark-inline-links": {},
      "remark-license": {},
      "remark-heading-gap": {},
      "remark-reference-links": {}
    },
    "settings": {
      "bullet": "*",
      "fences": true,
      "listItemIndent": "1"
    }
  }
}
