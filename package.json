{
  "name": "remark-bookmarks",
  "version": "1.0.0",
  "description": "A link manager for Markdown files.",
  "main": "dist/index.js",
  "files": [
    "dist",
    "license"
  ],
  "scripts": {
    "format": "remark . -qfo && prettier \"**/*.js\" --write && xo --fix",
    "prepublishOnly": "npm run build",
    "build": "babel src --out-dir dist --ignore src/**/*.test.js",
    "test-api": "ava",
    "test-coverage": "nyc --reporter lcov ava",
    "test": "npm run format && npm run build && npm run test-coverage"
  },
  "browserslist": "> 2.5%, node 6",
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "add-module-exports"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "ava": {
    "require": [
      "@babel/register"
    ]
  },
  "keywords": [
    "global",
    "links",
    "markdown",
    "remark"
  ],
  "author": {
    "name": "Ben Briggs",
    "email": "beneb.info@gmail.com",
    "url": "http://beneb.info"
  },
  "license": "MIT",
  "engines": {
    "node": ">=4"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@babel/register": "^7.0.0",
    "all-contributors-cli": "^5.0.0",
    "ava": "1.0.0-rc.1",
    "babel-plugin-add-module-exports": "^1.0.0",
    "nyc": "^13.1.0",
    "prettier": "^1.14.3",
    "remark": "^10.0.0",
    "remark-cli": "^6.0.0",
    "remark-heading-gap": "^3.0.0",
    "remark-inline-links": "^3.0.3",
    "remark-license": "^5.0.0",
    "remark-reference-links": "^4.0.0",
    "remark-toc": "^5.0.0",
    "remark-usage": "^6.1.1",
    "xo": "^0.23.0"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true
  },
  "dependencies": {
    "unist-util-remove": "^1.0.0",
    "unist-util-visit": "^1.1.1"
  },
  "remarkConfig": {
    "plugins": [
      [
        ".",
        {
          "bookmarks": {
            "npm": "https://npmjs.com/package/remark-bookmarks",
            "remark": "https://github.com/wooorm/remark",
            "remarkInlineLinks": "https://github.com/wooorm/remark-inline-links",
            "remarkLicense": "https://github.com/wooorm/remark-license",
            "remarkReferenceLinks": "https://github.com/wooorm/remark-reference-links"
          }
        }
      ],
      [
        "toc",
        {
          "maxDepth": 3
        }
      ],
      "usage",
      "inline-links",
      "license",
      "heading-gap",
      "reference-links"
    ],
    "settings": {
      "bullet": "*",
      "fences": true,
      "listItemIndent": "1"
    }
  }
}
