{
  "name": "remark-bookmarks",
  "version": "2.1.0",
  "description": "A link manager for Markdown files.",
  "license": "MIT",
  "keywords": [
    "global",
    "links",
    "markdown",
    "remark"
  ],
  "repository": "remarkjs/remark-bookmarks",
  "bugs": "https://github.com/remarkjs/remark-bookmarks/issues",
  "author": "Ben Briggs <beneb.info@gmail.com> (http://beneb.info)",
  "contributors": [
    "Ben Briggs <beneb.info@gmail.com> (http://beneb.info)",
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "main": "dist/index.js",
  "module": "src/index.js",
  "files": [
    "dist",
    "license",
    "src"
  ],
  "dependencies": {
    "unist-util-remove": "^1.0.0",
    "unist-util-visit": "^1.1.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "^7.0.0",
    "all-contributors-cli": "^6.0.0",
    "ava": "2.0.0",
    "babel-plugin-add-module-exports": "^1.0.0",
    "nyc": "^14.0.0",
    "prettier": "^1.0.0",
    "remark": "^10.0.0",
    "remark-cli": "^6.0.0",
    "remark-inline-links": "^3.0.0",
    "remark-license": "^5.0.0",
    "remark-preset-wooorm": "^5.0.0",
    "remark-reference-links": "^4.0.0",
    "remark-usage": "^6.0.0",
    "xo": "^0.24.0"
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "babel src --out-dir dist --ignore src/**/*.test.js",
    "format": "remark *.md -qfo && prettier \"**/*.js\" --write && xo --fix",
    "test-api": "ava",
    "test-coverage": "nyc --reporter lcov ava",
    "test": "npm run build && npm run format && npm run test-coverage"
  },
  "browserslist": "> 2.5%, node 6",
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "add-module-exports"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "ava": {
    "require": [
      "@babel/register"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm",
      [
        "lint-maximum-line-length",
        false
      ],
      "usage",
      "inline-links",
      "license",
      "reference-links"
    ]
  }
}
